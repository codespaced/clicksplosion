
class MainScene extends Phaser.Scene {
  constructor() {
    super({ key: 'MainScene' })
  }

  preload() {
    this.load.crossOrigin = 'anonymous'
    this.load.spritesheet('enemy', 'https://labs.phaser.io/assets/sprites/phaser2.png', {
      frameWidth: 45,
      frameHeight: 72
    })
  }

  create() {
    this.cameras.main.setBackgroundColor(0x000000)

    this.make.graphics({ x: 0, y: 0, add: false }).lineStyle(2, 0xffff00, 1.0).strokeCircle(24, 24, 24).generateTexture('reticle', 48, 48)

    let reticle = this.physics.add.image(250, 250, 'reticle')
    let enemy = this.physics.add.sprite(400, 300, 'enemy')

    this.input.on('pointermove', pointer => {
      reticle.x = pointer.x
      reticle.y = pointer.y
    })
  }
}
  
const config = {
    type: Phaser.AUTO,
    parent: 'phaser-example',
    scale: {
      //mode: Phaser.Scale.ScaleModes.FIT,
      //autoCenter: Phaser.Scale.CENTER_BOTH,
      width: 800,
      height: 600
    },
    scene: MainScene,
    physics: {
      default: 'arcade',
      arcade: {
        debug: true,
        gravity: { y: 0 }
      }
   }
}

const game = new Phaser.Game(config)

